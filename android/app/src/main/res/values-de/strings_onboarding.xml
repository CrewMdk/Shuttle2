<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Title of 'media directory selection' screen. User can choose to add directories to be scanned -->
    <string name="onboarding_directories_dialog_add_title">Medienverzeichnisse</string>
    <!-- Button to allow the user to add a directory, when using the 'S2 Media Scanner' -->
    <string name="onboarding_directories_dialog_add_button">Verzeichnis hinzufügen</string>
    <!-- Error message title shown when the user is missing the 'document provider' app. (An app that allows them to choose files & directories) -->
    <string name="onboarding_directories_dialog_missing_title">Fehlender Dokumentanbieter</string>
    <!-- Error message description shown when the user is missing the 'document provider' app. (An app that allows them to choose files & directories) -->
    <string name="onboarding_directories_dialog_missing_subtitle">Dateimanager zum hinzufügen von Verzeichnissen kann nicht gefunden werden. Du musst vielleicht einen installieren, oder auf den Android Media Store zurückfallen.</string>
    <!-- Explanation shown to user when they're about to choose which directories wil lbe scanned bv the S2 media scanner-->
    <string name="onboarding_directories_add_directories_help_text">Damit S2 nach Musik suchen kann, benötigt es Zugriff auf Deine Medienverzeichnisse. Füge ein Verzeichnis mit Deinem Android Dateimanager hinzu.</string>
    <!-- Shown when the app is scanning the user's directories for media -->
    <string name="onboarding_directories_scanning">Wird gescannt…</string>
    <!-- Shown when the media scanner is scanning the user's directories for media-->
    <plurals name="onboarding_directories_scan_progress">
        <item quantity="one"><xliff:g example="1" id="count">{count}</xliff:g>
       Audiodatei</item>
        <item quantity="other"><xliff:g example="30" id="count">{count}</xliff:g>
       Audiodateien</item>
    </plurals>
    <!-- Dialog title shown to user to indicate that S2 requires permission to access their storage -->
    <string name="onboarding_permission_dialog_title">Speichererlaubnis ist erforderlich</string>
    <!-- Dialog message shown to explain that S2 requires permission to access their storage-->
    <string name="onboarding_permission_dialog_subtitle">S2 funktioniert möglicherweise nicht richtig, wenn es keine Berechtigung zum Zugriff auf Deine Musik hat</string>
    <!-- Dialog button to grant permission to the app to access users storage-->
    <string name="onboarding_permission_button_grant">Erlaubnis erteilen</string>
    <!-- Shown after user initially denies access to storage -->
    <string name="onboarding_permission_help_text">Um Deine Musik zu finden, benötigt S2 die Erlaubnis, Deinen Medienspeicher zu lesen</string>
    <!-- Title of S2's Media Scanner, the thing that scans files on the device to read audio files/tags -->
    <string name="onboarding_media_scanner_title">Medien-Scanner</string>
    <!-- Shown when the media scanner is scanning -->
    <string name="onboarding_media_scanner_scanning">Wird gescannt…</string>
    <!-- Button to initiate a media scanner scan-->
    <string name="onboarding_media_scan">Scannen</string>
    <!-- Button to go back to the previous page, when onboarding -->
    <string name="onboarding_button_back">Zurück</string>
    <!-- Button to go to the next page, when onboarding -->
    <string name="onboarding_button_next">Nächster</string>
    <!-- Button to trigger the MediaScanner to perform a rescan of audio files on the device-->
    <string name="onboarding_media_scanner_rescan">Neu scannen</string>
    <!-- Shown when the S2 Media Provider is scanning song tags (metadata)-->
    <string name="onboarding_scanner_reading_song_tags">Song-Tags lesen…</string>
    <!-- Shown when onboarding. Describes why S2 would like to use Firebase Analytics-->
    <string name="onboarding_data_collection_title">S2 hätte gerne Deine Erlaubnis anonyme Absturz Daten und Analysen zu sammeln</string>
    <!-- Shown when onboarding. Switch to enable Crash Reporting -->
    <string name="onboarding_switch_crash_reporting">Firebase Absturz Meldung</string>
    <!-- Shown when onboarding. Describes what Crash Reporting is used for-->
    <string name="onboarding_switch_description_crash_reporting">Anonyme Absturz Statistiken, welche dabei helfen Fehler zu finden und zu lösen</string>
    <!-- Shown when onboarding. Switch to enable Firebase Analytics -->
    <string name="onboarding_switch_firebase_analytics">Firebase Analysen</string>
    <!-- Shown when onboarding. Describes what Firebase Analytics is used for-->
    <string name="onboarding_switch_firebase_description_analytics">Aktiviert A/B Testung von Funktionen, und verfolgt wie Benutzer mit der interagieren.</string>
    <!-- Shown during onboarding, or when choosing a media provider. -->
    <string name="onboarding_media_selection_subtitle">Wähle aus woher Deine Musik kommt. Verwende den Android Media Store wenn Du dir nicht sicher bist.</string>
</resources>
