<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Title of 'media directory selection' screen. User can choose to add directories to be scanned -->
    <string name="onboarding_directories_dialog_add_title">Media Directories</string>
    <!-- Button to allow the user to add a directory, when using the 'S2 Media Scanner' -->
    <string name="onboarding_directories_dialog_add_button">Add Directory</string>
    <!-- Error message title shown when the user is missing the 'document provider' app. (An app that allows them to choose files & directories) -->
    <string name="onboarding_directories_dialog_missing_title">Missing Document Provider</string>
    <!-- Error message description shown when the user is missing the 'document provider' app. (An app that allows them to choose files & directories) -->
    <string name="onboarding_directories_dialog_missing_subtitle">Can\'t find a file provider to add directories. You may have to install one, or revert to using the Android Media Store provider.</string>
    <!-- Explanation shown to user when they're about to choose which directories wil lbe scanned bv the S2 media scanner-->
    <string name="onboarding_directories_add_directories_help_text">To scan for music, S2 requires access to your media directories. Add a directory via your Android File Provider app.</string>
    <!-- Shown when the app is scanning the user's directories for media -->
    <string name="onboarding_directories_scanning">Scanning…</string>
    <!-- Shown when the media scanner is scanning the user's directories for media-->
    <plurals name="onboarding_directories_scan_progress">
        <item quantity="one"><xliff:g example="1" id="count">{count}</xliff:g> audio file</item>
        <item quantity="other"><xliff:g example="30" id="count">{count}</xliff:g> audio files</item>
    </plurals>
    <!-- Dialog title shown to user to indicate that S2 requires permission to access their storage -->
    <string name="onboarding_permission_dialog_title">Storage Permission Required</string>
    <!-- Dialog message shown to explain that S2 requires permission to access their storage-->
    <string name="onboarding_permission_dialog_subtitle">S2 may not function correctly without permission to access your music</string>
    <!-- Dialog button to grant permission to the app to access users storage-->
    <string name="onboarding_permission_button_grant">Grant Permission</string>
    <!-- Shown after user initially denies access to storage -->
    <string name="onboarding_permission_help_text">To find your music, S2 needs permission to read your media storage</string>
    <!-- Title of S2's Media Scanner, the thing that scans files on the device to read audio files/tags -->
    <string name="onboarding_media_scanner_title">Media scanner</string>
    <!-- Shown when the media scanner is scanning -->
    <string name="onboarding_media_scanner_scanning">Scanning…</string>
    <!-- Button to initiate a media scanner scan-->
    <string name="onboarding_media_scan">Scan</string>
    <!-- Button to go back to the previous page, when onboarding -->
    <string name="onboarding_button_back">Back</string>
    <!-- Button to go to the next page, when onboarding -->
    <string name="onboarding_button_next">Next</string>
    <!-- Button to trigger the MediaScanner to perform a rescan of audio files on the device-->
    <string name="onboarding_media_scanner_rescan">Rescan</string>
    <!-- Shown when the S2 Media Provider is scanning song tags (metadata)-->
    <string name="onboarding_scanner_reading_song_tags">Reading song tags…</string>
    <!-- Shown when onboarding. Describes why S2 would like to use Firebase Analytics-->
    <string name="onboarding_data_collection_title">S2 would like your permission to share anonymous crash data and analytics</string>
    <!-- Shown when onboarding. Switch to enable Crash Reporting -->
    <string name="onboarding_switch_crash_reporting">Firebase Crash Reporting</string>
    <!-- Shown when onboarding. Describes what Crash Reporting is used for-->
    <string name="onboarding_switch_description_crash_reporting">Anonymous crash statistics, which help to track down and resolve bugs</string>
    <!-- Shown when onboarding. Switch to enable Firebase Analytics -->
    <string name="onboarding_switch_firebase_analytics">Firebase Analytics</string>
    <!-- Shown when onboarding. Describes what Firebase Analytics is used for-->
    <string name="onboarding_switch_firebase_description_analytics">Enables A/B testing of features, and tracks how users interact with the app</string>
    <!-- Shown during onboarding, or when choosing a media provider. -->
    <string name="onboarding_media_selection_subtitle">Choose where your music comes from. Use the Android Media Store if you\'re not sure.</string>
</resources>
